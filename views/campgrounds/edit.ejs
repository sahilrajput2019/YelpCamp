<%- include('../partials/header') %>          

        <div class="container">
            <h1 style = "text-align: center">Edit <%= campground.name %></h1>
                
            <div class="row text-center">
                <div style = "width: 40%; margin: 25px auto;">
                    <form action="/campgrounds/<%= campground._id %>?_method=PUT " method="POST">
                    <div class="form-group">
                        <input type="text" name="campground[name]" value="<%= campground.name %> " style="width:80%">
                    </div>
                    <div class="form-group">
                        <input type="text" name="campground[image]" value="<%= campground.image %> " style="width:80%">
					</div>
					<div class="form-group">
                        <input type="text" name="campground[description]" value="<%= campground.description %> " style="width:80%">
                    </div>
                    <div class="form-group">
                        <input type="number" name="campground[price]" value="<%= campground.price %> " min="0.01" step="0.01" style="width:80%">
                    </div>
                    <div class="form-group">
                        <button class = "btn btn-primary btn-sm " style="width: 370px;">SUBMIT</button>
                    </div>
                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </div>
		</div>
		
<%- include('../partials/footer') %>