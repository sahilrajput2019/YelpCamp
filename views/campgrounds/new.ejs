<%- include('../partials/header') %>          

        <div class="container">
            <h1 style = "text-align: center">Create a New Campground</h1>
                
            <div class="row text-center">
                <div style = "width: 40%; margin: 25px auto;">
                    <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Name" style="width:80%">
                    </div>
                    <div class="form-group">
                        <input type="text" name="image" placeholder="Image URL" style="width:80%">
					</div>
					<div class="form-group">
                        <input type="text" name="description" placeholder="Description" style="width:80%">
                    </div>
                    <div class="form-group">
                        <input type="number" name="price" placeholder="Price" min="0.01" step="0.01" style="width:80%">
                    </div>
                    <div class="form-group">
                        <button class = "btn btn-primary btn-sm " style="width: 370px;">SUBMIT</button>
                    </div>
                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>
            </div>
		</div>
		
<%- include('../partials/footer') %>